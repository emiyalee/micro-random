pipeline {
    agent {
        docker {
            image 'golang:1.13'
            args '-e GOPROXY=https://goproxy.cn'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'go env'
                sh 'go mod tidy'
                sh 'pwd'
                sh 'cd cmd/random-service'
                script {
                    docker.build('random-service')
                }
                
            }
        }
        stage('Test') {
            steps {
                sh 'go test ./...'
            }
        }
    }
}